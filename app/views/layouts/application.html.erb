<!DOCTYPE html>
<html>
  <head>
    <title>TinyBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<h3>Tiny Blog</h3>

  <nav>
  <%= link_to "Home", root_path %>  |  <%= link_to "About", 'about' %>
  <% if logged_in? %>
    <%= link_to "Your profile", user_path(session[:user_id]) %>  <%= link_to "Logout", logout_path, method: :post %>
  <% else %>
    <%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %>
  <% end %>
  </nav>
<% flash.each do |name, msg| %>
    <ul>
     <li><%= msg %></li>
    </ul>
<% end %>

    <%= yield %>
  </body>
</html>
