<h1>Create a post <%= @post.title %></h1>

<% if @post.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @post.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<%= form_for(@post) do |f| %>
<%= f.hidden_field :user_id, value: session[:user_id] %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.submit %>
<% end %>
  

